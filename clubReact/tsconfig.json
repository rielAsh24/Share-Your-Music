{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "noEmit": false,
    "outDir": "src",
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "ES6",
    "watch": true
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}
