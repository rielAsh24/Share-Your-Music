{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "noEmit": false,
    "outDir": "src",
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "ES6",
    "types": ["node"]
  },
  "include": ["src/*", "tests", "vite-env.d.ts", "vite/client"],
  "exclude": ["node_modules"]
}
